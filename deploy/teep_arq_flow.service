[Unit]
Description=RabbitMQ FTP Service
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/teep_arq_flow
ExecStart=/opt/teep_arq_flow/bin/python /opt/teep_arq_flow/service.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

# Seguran√ßa
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log /etc/teep_arq_flow /tmp

[Install]
WantedBy=multi-user.target